import { Injectable } from '@angular/core';

@Injectable()
export class CountryService {

  public get(locale: string): { [code: string]: string; } {
    if (-1 !== CountryService.LOCALES.indexOf(locale)) {
      return CountryService.COUNTRIES[locale];
    } else {
      return CountryService.COUNTRIES['en'];
    }
  }

  public getOne(locale: string, code: string): string {
    return this.get(locale)[code];
  }

