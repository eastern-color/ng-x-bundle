  protected static readonly COUNTRIES: { [locale: string]: { [code: string]: string } } = {{ countries | json_encode(constant('JSON_PRETTY_PRINT') b-or constant('JSON_UNESCAPED_UNICODE')) | replace({"\\t": "  ", "        ": "      "}) | replace({"];": "  ];", "};": "  };"}) | raw }};

}
